<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="demos.cfxmys.com.capplication">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".StandardA"
                  android:launchMode="standard" />

        <activity android:name=".SingleTaskA"
                  android:launchMode="singleTask" />

        <activity android:name=".SingleTopA"
                  android:launchMode="singleTop" />

        <activity android:name=".SingleInstanceA"
                  android:launchMode="singleInstance" />

        <activity android:name=".SingleInstanceB"
                  android:launchMode="singleInstance" />

    </application>

</manifest>